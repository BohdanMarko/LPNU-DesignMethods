@page "/vectors"

@using DesignMethods.Desktop.Data

<div class="vector-operations">

    <h3>Vector Operations</h3>

    <h5>Enter Vector Details</h5>

    <div class="vector-input">
        Vector 1:
        <div class="coord">
            <label for="vector1X">X:</label>
            <input id="vector1X" @bind="Vector1.X" placeholder="X Coordinate" />
        </div>
        <div class="coord">
            <label for="vector1Y">Y:</label>
            <input id="vector1Y" @bind="Vector1.Y" placeholder="Y Coordinate" />
        </div>
        <p>Length: @Vector1.GetLength()</p>
    </div>

    <div class="vector-input">
        Vector 2:
        <div class="coord">
            <label for="vector2X">X:</label>
            <input id="vector2X" @bind="Vector2.X" placeholder="X Coordinate" />
        </div>
        <div class="coord">
            <label for="vector2Y">Y:</label>
            <input id="vector2Y" @bind="Vector2.Y" placeholder="Y Coordinate" />
        </div>
        <p>Length: @Vector2.GetLength()</p>
    </div>

    <button @onclick="CalculateSum">Calculate Sum</button>
    <button @onclick="CalculateDifference">Calculate Difference</button>

    @if (ResultVector != null)
    {
        <div class="results">
            <h5>Result</h5>
            <p>Vector: @ResultVector.ToString()</p>
            <p>Length: @ResultVector.GetLength()</p>
        </div>
    }
</div>

@code {
    Vector Vector1 = new Vector(0, 0);
    Vector Vector2 = new Vector(0, 0);
    Vector ResultVector = null;

    void CalculateSum()
    {
        ResultVector = Vector1.Add(Vector2);
        StateHasChanged();
    }

    void CalculateDifference()
    {
        ResultVector = Vector1.Subtract(Vector2);
        StateHasChanged();
    }
}
